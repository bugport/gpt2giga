# No-SSL backend example for gpt2giga (plain HTTP to backend)

# Proxy bind/port
GPT2GIGA_HOST=0.0.0.0
GPT2GIGA_PORT=8090
GPT2GIGA_USE_HTTPS=False              # proxy serves HTTP
GPT2GIGA_LOG_LEVEL=INFO

# Backend over HTTP (no TLS)
GIGACHAT_BASE_URL=http://backend.example.com:8000/api/v1
GIGACHAT_VERIFY_SSL_CERTS=False       # disable TLS verification (backend is HTTP)

# Ensure TLS/mTLS options are off/empty
GIGACHAT_MTLS_AUTH=False
GIGACHAT_CA_BUNDLE_FILE=
GIGACHAT_CERT_FILE=
GIGACHAT_KEY_FILE=
GIGACHAT_KEY_FILE_PASSWORD=

# Optional: embeddings model
GPT2GIGA_EMBEDDINGS=EmbeddingsGigaR

# Streaming coalescing (optional, off by default)
GPT2GIGA_STREAM_COALESCE_BYTES=0
GPT2GIGA_STREAM_COALESCE_MS=0


