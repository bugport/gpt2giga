# Minimal OAuth/JWT acquisition example for gpt2giga

# Bind/port (pick a free port per instance)
GPT2GIGA_HOST=0.0.0.0
GPT2GIGA_PORT=8091

# Backend base URL (http or https)
GIGACHAT_BASE_URL=https://backend.example.com/api/v1

# Token acquisition (Basic base64 of CLIENT_ID:CLIENT_SECRET)
GPT2GIGA_AUTH_TOKEN_URL=https://api.sbercloud.ru/gigachat/v1/oauth
GPT2GIGA_AUTH_BASIC_B64=BASE64_CLIENTID_COLON_SECRET
# Leave grant_type empty to omit, or set explicitly
GPT2GIGA_AUTH_GRANT_TYPE=
GPT2GIGA_AUTH_SCOPE=GIGACHAT_API_PERS

# Injected token will be used for backend calls; TLS verification recommended for HTTPS backends
GIGACHAT_VERIFY_SSL_CERTS=True
# If your backend uses enterprise CA, set bundle path
# GIGACHAT_CA_BUNDLE_FILE=/abs/path/to/ca.pem

# Optional: choose embeddings model used on /embeddings
GPT2GIGA_EMBEDDINGS=EmbeddingsGigaR


